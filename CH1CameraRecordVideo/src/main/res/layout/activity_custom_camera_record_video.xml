<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <SurfaceView
        android:id="@+id/id_record_surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#20ffffff"
        android:padding="10dp">

        <!--BtnBegin/BtnComplete/BtnRecord-->
        <ImageView
            android:id="@+id/IV_Record_control"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/begin"
            android:src="@drawable/recordvideo_start"/>

        <Chronometer
            android:id="@+id/chronometer_recordTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:format="%s"/>
    </RelativeLayout>

</RelativeLayout>